{
  "npmScope": "ng-easy",
  "affected": {
    "defaultBase": "main"
  },
  "implicitDependencies": {
    "workspace.json": "*",
    "package.json": {
      "scripts": "*",
      "dependencies": "*",
      "devDependencies": "*"
    },
    "tsconfig.base.json": "*",
    "tsconfig.base-node.json": "*",
    ".eslintrc.json": "*",
    "nx.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": ["browser", "server", "build", "test", "lint", "e2e", "favicons", "compodoc", "storybook-compodoc"],
        "strictlyOrderedTargets": ["build", "release"],
        "canTrackAnalytics": false,
        "showUsageWarnings": true,
        "scan": true,
        "accessToken": "ZDJlYjRhOTMtZGI1OS00YzIyLWE4NjctZGIwZWRlYzcwOWEzfHJlYWQ=",
        "parallel": 1
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "release": [
      {
        "target": "release",
        "projects": "dependencies"
      }
    ]
  },
  "cli": {
    "defaultCollection": "@nrwl/node"
  },
  "generators": {
    "@nrwl/angular": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      },
      "storybook-configuration": {
        "linter": "eslint"
      }
    },
    "@nrwl/angular:application": {
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": {
      "style": "scss"
    },
    "@nrwl/node:library": {
      "buildable": true,
      "publishable": true
    },
    "@schematics/angular:component": {
      "flat": true,
      "skipTests": true,
      "inlineStyle": true,
      "inlineTemplate": true,
      "changeDetection": "OnPush",
      "prefix": "nge",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "nge"
    },
    "@schematics/angular:service": {
      "flat": true
    }
  },
  "defaultProject": "image"
}
