{
  "npmScope": "ng-easy",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": ["browser", "server", "build", "test", "lint", "e2e", "favicons", "compodoc", "storybook-compodoc"],
        "strictlyOrderedTargets": ["build", "release"],
        "canTrackAnalytics": false,
        "showUsageWarnings": true,
        "accessToken": "ZDJlYjRhOTMtZGI1OS00YzIyLWE4NjctZGIwZWRlYzcwOWEzfHJlYWQ=",
        "parallel": 1
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "generators": {
    "@nrwl/angular": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      },
      "storybook-configuration": {
        "linter": "eslint"
      }
    },
    "@nrwl/angular:application": {
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": {
      "style": "scss"
    },
    "@nrwl/node:library": {
      "buildable": true,
      "publishable": true
    },
    "@schematics/angular:component": {
      "flat": true,
      "skipTests": true,
      "inlineStyle": true,
      "inlineTemplate": true,
      "changeDetection": "OnPush",
      "prefix": "nge",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "nge"
    },
    "@schematics/angular:service": {
      "flat": true
    }
  },
  "defaultProject": "image",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "release": {
      "dependsOn": ["^release"]
    },
    "e2e": {
      "inputs": ["default", "^default"]
    },
    "test": {
      "inputs": ["default", "^default"]
    },
    "build-storybook": {
      "inputs": ["default", "^default", "{workspaceRoot}/.storybook/**/*"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [
      "{workspaceRoot}/workspace.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/tsconfig.base-node.json",
      "{workspaceRoot}/nx.json"
    ],
    "production": ["default"]
  }
}
