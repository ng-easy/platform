{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/image/src",
  "prefix": "ng-easy",
  "targets": {
    "dev": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "npx nx run image:storybook-compodoc --watch",
          "npx nx run image:storybook"
        ],
        "parallel": true
      }
    },
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": [
        "dist/libs/image"
      ],
      "options": {
        "project": "libs/image/ng-package.json",
        "tsConfig": "libs/image/tsconfig.lib.prod.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/image/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/image/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/libs/image"
      ],
      "options": {
        "jestConfig": "libs/image/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/image/src/**/*.ts",
          "libs/image/src/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/image/.storybook",
        "browserTarget": "image:build-storybook",
        "compodoc": false
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputDir": "docs/storybook/image",
        "configDir": "libs/image/.storybook",
        "browserTarget": "image:build-storybook",
        "compodoc": false
      }
    },
    "storybook-compodoc": {
      "executor": "@twittwer/compodoc:compodoc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "tsConfig": "libs/image/tsconfig.lib.prod.json",
        "outputPath": "dist/compodoc/image",
        "exportFormat": "json"
      }
    },
    "storybook-build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "npx nx run image:storybook-compodoc",
          "npx nx run image:build-storybook"
        ],
        "parallel": false
      }
    }
  },
  "tags": [
    "release:image"
  ]
}
